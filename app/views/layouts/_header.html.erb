
<!-- ハンバーガーメニューアイコン -->

<div class="d-block d-md-none hum-icon">
  <i class="fas fa-bars fa-2x"></i>
</div>

<header style="background-color: #f0f8ff;">
  <div class="container">
    <div class="text-center m-2">
      <% if admin_signed_in? %>
        <%= link_to  admin_users_path %>
      <% else %>
        <%= link_to  root_path %>
      <% end %>
    </div>

    <!-- パソコンでの画面表示 -->

    <div class="d-none d-md-block">
      <% if customer_signed_in? %>

        <!-- ユーザーがログインしている時 -->

        <div class="text-center">
          <ul class="list-inline">
            <li class="list-inline-item">
              <%= link_to customer_path(current_customer), class: "nav-link text-dark" do %>
                <i class="fas fa-user-cog"></i>マイページ
              <% end %>
            </li>
            <li class="list-inline-item">
              <%= link_to new_post_path, class: "nav-link text-dark" do %>
                <i class="fas fa-pencil-alt"></i>新規投稿
              <% end %>
            </li>
            <li class="list-inline-item">
              <%= link_to customers_path, class: "nav-link text-dark" do %>
                <i class="fas fa-users"></i>ユーザー一覧
              <% end %>
            </li>
            <li class="list-inline-item">
              <%= link_to posts_path, class: "nav-link text-dark" do %>
                <i class="fas fa-file-alt"></i>投稿一覧
              <% end %>
            </li>
            <li class="list-inline-item">
              <%= link_to destroy_customer_session_path, method: :delete, class: "nav-link text-dark" do %>
                <i class="fas fa-sign-out-alt"></i>ログアウト
              <% end %>
            </li>
          </ul>
        </div>
      <% elsif admin_signed_in? %>

        <!--管理者がログインしている時-->

        <div class="text-center">
          <ul class="list-inline">
            <li class="list-inline-item">
              <%= link_to admin_customer_path, class: "nav-link text-dark" do %>
                <i class="fas fa-users"></i>ユーザー一覧
              <% end %>
            </li>
            <li class="list-inline-item">
              <%= link_to admin_posts_path, class: "nav-link text-dark" do %>
                <i class="fas fa-file-alt"></i>投稿一覧
              <% end %>
            </li>
            <li class="list-inline-item">
              <%= link_to destroy_admin_session_path, method: :delete, class: "nav-link text-dark" do %>
                <i class="fas fa-sign-out-alt"></i>ログアウト
              <% end %>
            </li>
          </ul>
        </div>
      <% else %>

        <!--ログインしていない時-->

        <div class="text-center">
          <ul class="list-inline">
            <li class="list-inline-item">
              <%= link_to posts_path, class: "nav-link text-dark" do %>
                <i class="fas fa-file-alt"></i>投稿一覧
              <% end %>
            </li>
            <li class="list-inline-item">
              <%= link_to new_customer_registration_path, class: "nav-link text-dark" do %>
                <i class="fas fa-user-plus"></i>新規登録
              <% end %>
            </li>
            <li class="list-inline-item">
              <%= link_to new_customer_session_path, class: "nav-link text-dark" do %>
                <i class="fas fa-user"></i>ログイン
              <% end %>
            </li>
             <li class="list-inline-item">
              <%= link_to customers_guest_sign_in_path, class: "nav-link text-dark" do %>
                <i class="fas fa-user"></i>ゲストログイン
              <% end %>
            </li>
          </ul>
        </div>
      <% end %>
    </div>

    <% if customer_signed_in? %>
      <div class="row mb-2">
        <div class="col-md-3 spots_search text-center">
          <%= link_to spots_path do %>
            <h5><i class="fas fa-search-location"></i>地図から探す</h5>
          <% end %>
        </div>

        <!--<div class="col-md-9 search-box text-center">-->
        <!--  < %= render "public/searches/search" %>-->
        <!--</div>-->
      </div>
    <% end %>
  </div>
</header>
