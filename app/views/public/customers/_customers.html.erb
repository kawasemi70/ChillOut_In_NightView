<!-- パソコンの表示 -->

<table class="table table-hover table-inverse d-none d-xl-table">
  <thead>
    <tr class="table-warning">
      <th>プロフィール画像</th>
      <th>ユーザーネーム</th>

    </tr>
  </thead>
  <% @customers.each do |customer| %>
  <tbody>
    <tr>
      <td>
        <%= link_to(customer) do %>
          <%= image_tag customer.get_profile_image(50, 50), class: "rounded-circle" %>
        <% end %>
      </td>
      <td>
        <%= link_to(customer) do %>
          <h5><%= customer.customername %></h5>
        <% end %>
      </td>
    </tr>
  </tbody>
  <% end %>
</table>
