<h1>Public::Customers#edit</h1>
<div class="container">
  <div class="row">
    <div class="col-md-6 mx-auto">
      <h2 class="mt-4 mb-4">
        <i class="fas fa-user-edit"></i>
        ユーザー情報編集
      </h2>
      <%= form_with model: @customer do |f| %>
        <%= render 'layouts/errors', obj: @customer %>
        <%= f.label :"プロフィール画像" %><br>
        <%= f.file_field :profile_image, class: "mb-2" %><br>
        <%= f.label :"ユーザーネーム" %><br>
        <%= f.text_field :customername, class: "form-control" %><br>
        <%= f.label :"自己紹介" %><br>
        <%= f.text_area :introduction, class: "form-control py-5" %><br>

        <div class="row mt-2 mb-4">

          <%= f.submit "更新する", class: "btn btn-outline-success rounded-pill" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
<p>Find me in app/views/public/customers/edit.html.erb</p>
