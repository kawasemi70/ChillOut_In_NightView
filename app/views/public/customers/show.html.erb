

<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-4">
      <div class="row">
        <h3 class="mt-4 mb-4 mr-5 pr-3">プロフィール</h3>
        <% if @customer.customername != "guestcustomer" %>
          <div class="mt-4 mb-4">
            <%= link_to edit_customer_path(@customer) do %>
              <h2><i class="fas fa-user-cog"></i></h2>
            <% end %>
          </div>
        <% end %>
      </div>
      <div class="mb-3">
        <%= image_tag @customer.get_profile_image(200, 200), class: "rounded-circle" %>
      </div>
      <table class="table">
        <tbody>
          <tr>
            <th class="col-md-5">ユーザーネーム</th>
            <th><%= @customer.customername %></th>
          </tr>
          <tr>
            <th>自己紹介</th>
            <th><%= @customer.introduction %></th>
          </tr>

        </tbody>
      </table>

      <div class="row mb-3">

        <div class="offset-1">
          <%= link_to customer_favorites_path(@customer), class: "btn btn-outline-warning rounded-pill" do %>
            <i class="fas fa-heart"></i>いいね一覧
          <% end %>
        </div>
      </div>
    </div>

    <div class="col-md-6 offset-sm-1">
      <h3 class="mt-4 mb-4">投稿履歴</h3>
      <table class="table table-hover table-inverse">
        <thead>
          <tr class="table-warning">
            <th>画像</th>
            <th>夜景スポット</th>
          </tr>
        </thead>
        <tbody>
          <% @customer.posts.each do |f| %>
          <tr>
            <td><%= image_tag f.get_spot_image(100, 100) %></td>
            <td><%= link_to f.title, f %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>


