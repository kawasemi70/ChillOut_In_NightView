
<div class="container">
  <div class="row">
    <div class="col-md-10 mx-auto">
      <h2 class="mt-4 mb-4">
        <i class="fas fa-edit"></i>
        投稿編集
      </h2>
      <%= form_with model: @post do |f| %>
        <%= render 'layouts/errors', obj: @post %>
        <%= f.label :"夜景スポット" %><br>
        <%= f.text_field :title, class: "form-control" %><br>
        <div class="form-group row" id="evaluation">
          <%= f.label :"レビュー" %>
          <%= f.hidden_field :evaluation, id: :evaluation %>
        </div>
        <script>
          $("#star").empty();
          $("#star").raty({
            size: 36,
            starOff: "<%= asset_path("star-off.png") %>",
            starOn: "<%= asset_path("star-on.png") %>",
            starHalf: '<%= asset_path('star-half.png') %>',
            scoreName: "post[evaluation]",
            half: true,
          });
        </script>
        <%= f.label :"紹介" %><br>
        <%= f.text_area :body, class: "form-control py-5" %><br>
        <%= f.label :"夜景スポット画像" %><br>
        <%= f.file_field :spot_image, class: "mb-2" %><br>
        <%= f.label :"住所", class: "mt-4" %><br>
        <%= f.text_field :address, class: "form-control" %><br/>
        <%= f.label :"タグ", class: "mt-4" %><br>
        <%= f.text_field :tag_name, value: @tag_list,class:"form-control"%> </br>
        <div class= "row">
          <div class="col-md-3 mt-3 mb-5">
            <%= f.submit :"更新する", class: "btn btn-outline-success rounded-pill" %>
          </div>
          <div class="col-md-5 offset-md-1 mt-3 mb-5">
            <%= link_to "投稿を削除する", post_path(@post), method: :delete, data: { confirm: "投稿を削除してよろしいですか？" }, class: "btn btn-outline-danger rounded-pill" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
