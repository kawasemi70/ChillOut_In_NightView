<% content_for(:title, t('.title')) %>
<div class="container  mx-auto px-5 py-10 relative">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-4">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
      <h2>
        <i class="fas fa-file-alt"></i>
      投稿一覧
      </h2>
      <%= render "posts", posts: @posts %>
      <div class="absolute flex justify-center inset-x-0 bottom-0"><%= paginate @posts %></div>
    </div>
  </div>
</div>
<span id="back">
  <%= link_to "#" do %>
    <%= image_tag asset_path("arrow.png"), class: "arrow" %>
  <% end %>
</span>
