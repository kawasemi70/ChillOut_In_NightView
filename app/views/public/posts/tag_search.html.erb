<div class="container">
  <div class="row">
    <h2 class="col-md-5 mt-4 mb-4">タグの検索結果</h2>
    <table class="table table-hover table-inverse">
      <thead>
        <tr class="table-warning">
          <th>タグ</th>
        </tr>
      </thead>
      <% @posts.each do |post| %>
        <tbody>
          <tr>
            <td>
              <%= "#{@tag.tag_name}" %>
              <%= link_to post.title, post %>
            </td>
          </tr>
        </tbody>
      <% end %>
    </table>
    <div class="pagination justify-content-center"> <%= paginate @posts%></div>
  </div>
</div>